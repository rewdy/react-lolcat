{
  "name": "@rewdy/react-lolcat",
  "version": "0.0.0",
  "author": "Rewdy Meyer (https://rewdy.lol)",
  "type": "module",
  "main": "lib/index.umd.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "bun build:lib && bun build:site",
    "build:lib": "tsc -b && vite build",
    "build:site": "vite build --config vite.config.site.ts",
    "clean": "rm -rf dist lib",
    "dev": "vite",
    "format:check": "biome format .",
    "format": "biome format . --write",
    "lint:fix": "biome check . --write",
    "lint": "biome check .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@biomejs/biome": "^1.9.4",
    "@picocss/pico": "^2.0.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "globals": "^15.12.0",
    "react-syntax-highlighter": "^15.6.1",
    "sass-embedded": "^1.83.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rewdy/react-lolcat"
  },
